# Locopon Environment Configuration
# Copy this file to .env and fill in your values

# === DeepSeek AI Configuration ===
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# === Telegram Bot Configuration ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# === Database Configuration ===
DATABASE_PATH=data/locopon.db

# === Logging Configuration ===
LOG_LEVEL=INFO
LOG_FILE=logs/locopon.log

# === eReklamblad Configuration ===
EREKLAMBLAD_BASE_URL=https://ereklamblad.se
PUBLICATION_ID=5X0fxUgs
BUSINESS_SLUG=ICA-Maxi-Stormarknad

# === Rate Limiting ===
REQUEST_DELAY=1.0
MAX_RETRIES=3

# === Schedule Configuration ===
SCAN_INTERVAL_MINUTES=60
SUMMARY_INTERVAL_HOURS=6

# === Feature Flags ===
ENABLE_AI_ANALYSIS=true
ENABLE_TELEGRAM_NOTIFICATIONS=true
ENABLE_PRICE_TRACKING=true
ENABLE_NEW_OFFERS_ALERT=true

# === Data Storage ===
MAX_OFFERS_PER_RUN=100
DATA_RETENTION_DAYS=30
